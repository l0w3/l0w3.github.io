---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allPapers = await getCollection('papers', ({ data }) => {
  return data.draft !== true;
});
const sortedPapers = allPapers.sort((a, b) =>
  new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);

function formatDate(date: Date): string {
  return new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<BaseLayout title="Research Papers - 0xl0w3">
    <section class="latest-section">
        <h2 class="section-title">Research Papers</h2>
        <p style="color: #b0b0b0; margin-bottom: 2rem;">Published research papers and technical publications in cybersecurity.</p>

        <div class="papers-list">
            {sortedPapers.map(paper => (
                <div class="paper-item">
                    <div class="paper-category">{paper.data.category}</div>
                    <h3>{paper.data.title}</h3>
                    <p class="paper-authors">
                        {paper.data.authors.join(', ')}
                    </p>
                    <p class="paper-description">{paper.data.description}</p>
                    <div class="paper-meta">
                        <span class="paper-date">{formatDate(paper.data.pubDate)}</span>
                        <span>{paper.data.readTime}</span>
                        {paper.data.tags && paper.data.tags.length > 0 && (
                            <div class="paper-tags">
                                {paper.data.tags.map(tag => (
                                    <span class="tag">{tag}</span>
                                ))}
                            </div>
                        )}
                    </div>
                    <div class="paper-links">
                        {paper.data.pdfUrl && (
                            <a href={paper.data.pdfUrl} target="_blank" rel="noopener noreferrer" class="paper-link">
                                Download PDF →
                            </a>
                        )}
                        {paper.data.externalUrl && (
                            <a href={paper.data.externalUrl} target="_blank" rel="noopener noreferrer" class="paper-link">
                                View Publication →
                            </a>
                        )}
                    </div>
                </div>
            ))}
        </div>

        {sortedPapers.length === 0 && (
            <p style="color: #888; text-align: center; padding: 2rem;">No research papers added yet.</p>
        )}
    </section>
</BaseLayout>

<style>
    .papers-list {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        margin-top: 2rem;
    }

    .paper-item {
        background: rgba(35, 35, 35, 0.6);
        border: 1px solid rgba(255, 193, 7, 0.1);
        border-radius: 8px;
        padding: 2rem;
        transition: all 0.3s ease;
    }

    .paper-item:hover {
        background: rgba(45, 45, 45, 0.9);
        border-color: rgba(255, 193, 7, 0.3);
        transform: translateX(10px);
        box-shadow: 0 10px 40px rgba(255, 193, 7, 0.1);
    }

    .paper-category {
        display: inline-block;
        background: rgba(255, 193, 7, 0.2);
        color: #ffc107;
        padding: 0.35rem 0.75rem;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        margin-bottom: 1rem;
    }

    .paper-item h3 {
        color: #ffc107;
        font-size: 1.5rem;
        margin-bottom: 0.75rem;
        line-height: 1.4;
    }

    .paper-authors {
        color: #888;
        font-style: italic;
        margin-bottom: 1rem;
        font-size: 0.95rem;
    }

    .paper-description {
        color: #b0b0b0;
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .paper-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        align-items: center;
        font-size: 0.85rem;
        color: #888;
        padding-top: 1rem;
        border-top: 1px solid rgba(255, 193, 7, 0.1);
        margin-bottom: 1rem;
    }

    .paper-date {
        color: #ffc107;
    }

    .paper-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .tag {
        background: rgba(255, 193, 7, 0.15);
        color: #ffc107;
        padding: 0.2rem 0.6rem;
        border-radius: 3px;
        font-size: 0.75rem;
    }

    .paper-links {
        display: flex;
        gap: 1.5rem;
        flex-wrap: wrap;
    }

    .paper-link {
        color: #ffc107;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
    }

    .paper-link:hover {
        color: #ffed4e;
    }
</style>
