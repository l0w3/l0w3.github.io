---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Cybersecurity research and in-depth technical analysis" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description}>
    <title>{title}</title>
    <link rel="icon" type="image/jpeg" href="/logo.jpeg" />
</head>
<body>
    <!-- Navigation -->
    <nav>
        <div class="nav-container">
            <a href="/" class="logo">0xl0w3</a>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/papers">Research Papers</a></li>
                <li><a href="/certifications">Certifications</a></li>
                <li><a href="/blog">Blog</a></li>
            </ul>
        </div>
    </nav>

    <slot />

    <!-- Footer -->
    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h4>0xl0w3</h4>
                <p>Cybersecurity research and technical analysis.</p>
            </div>
            <div class="footer-section">
                <h4>Navigation</h4>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/about">About</a></li>
                    <li><a href="/papers">Research Papers</a></li>
                    <li><a href="/certifications">Certifications</a></li>
                    <li><a href="/blog">Blog</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Connect</h4>
                <ul>
                    <li><a href="#">Twitter</a></li>
                    <li><a href="#">GitHub</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; {new Date().getFullYear()} 0xl0w3. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
